# Backend Environment Variables Template
# Copy this to .env in the backend directory for local development

# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/plantstore

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# JWT Secret (generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here

# Optional: Google Images API configuration (for auto-fetching plant images)
# GOOGLE_API_KEY=your_google_api_key
# GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id

# Optional: Email configuration (if you add email features later)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
